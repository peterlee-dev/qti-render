<?xml version="1.0" encoding="UTF-8"?>
<!-- <?xml-stylesheet type="text/xsl" href="choice.xsl"?> -->
<qti-assessment-item identifier="choice" title="Unattended Luggage" adaptive="false" time-dependent="false">
    <qti-response-declaration identifier="RESPONSE" cardinality="single" base-type="identifier">
		<qti-correct-response>
			<qti-value>ChoiceD</qti-value>
		</qti-correct-response>
	</qti-response-declaration>
	<qti-outcome-declaration identifier="SCORE" cardinality="single" base-type="float">
		<qti-default-value>
			<qti-value>0</qti-value>
		</qti-default-value>
	</qti-outcome-declaration>
    <qti-item-body>
        <qti-choice-interaction
            response-identifier="RESPONSE" shuffle="true"
            max-choices="1"
            class="qti-choices-stacking-5">
            <qti-prompt>
                <audio id="tts" src="./18.MP3"></audio>
                <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                    <img class="soundButton" data-audio-id="tts" src="./speaker.svg" style="width: 30px; height: 30px;"/>
                    <div style="margin-left:0.5rem;  font-size: 2rem">개구리의 수에 맞는 숫자를 고르세요.</div>
                </div>
                <div style="position: relative; height:180px;">
                    <div style="position: absolute; left: 280px; top: 0px; width:180px; height:160px;">
                        <img src="./flog.svg" width="70" height="70" style="position: absolute; left: 110px; top: 5px;"/>
                        <img src="./flog.svg" width="70" height="70" style="position: absolute; left: 230px; top: 5px;"/>
                        <img src="./flog.svg" width="70" height="70" style="position: absolute; left: 50px; top: 85px;"/>
                        <img src="./flog.svg" width="70" height="70" style="position: absolute; left: 170px; top: 85px;"/>
                    </div>
                </div>
            </qti-prompt>
                <qti-simple-choice identifier="ChoiceA">
                    <div style="width: 150px; height: 180px; display: flex; align-items: center; justify-content: center">
                        <div style="font-size: 5rem">1</div>
                    </div>
                </qti-simple-choice>
                <qti-simple-choice identifier="ChoiceB">
                    <div style="width: 150px; height: 180px; display: flex; align-items: center; justify-content: center">
                        <div style="font-size: 5rem">2</div>
                    </div>
                </qti-simple-choice>
                <qti-simple-choice identifier="ChoiceC">
                    <div style="width: 150px; height: 180px; display: flex; align-items: center; justify-content: center">
                        <div style="font-size: 5rem">3</div>
                    </div>
                </qti-simple-choice>
                <qti-simple-choice identifier="ChoiceD">
                    <div style="width: 150px; height: 180px; display: flex; align-items: center; justify-content: center">
                        <div style="font-size: 5rem">4</div>
                    </div>
                </qti-simple-choice>
                <qti-simple-choice identifier="ChoiceE">
                    <div style="width: 150px; height: 180px; display: flex; align-items: center; justify-content: center">
                        <div style="font-size: 5rem">5</div>
                    </div>
                </qti-simple-choice>
        </qti-choice-interaction>
    </qti-item-body>
</qti-assessment-item>


