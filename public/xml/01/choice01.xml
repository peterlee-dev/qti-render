<qti-assessment-item identifier="choice" title="Unattended Luggage" adaptive="false" time-dependent="false">
    <qti-response-declaration identifier="RESPONSE" cardinality="single" base-type="identifier">
        <qti-correct-response>
            <qti-value>ChoiceA</qti-value>
        </qti-correct-response>
    </qti-response-declaration>
    <qti-outcome-declaration identifier="SCORE" cardinality="single" base-type="float">
        <qti-default-value>
            <qti-value>0</qti-value>
        </qti-default-value>
    </qti-outcome-declaration>
    <qti-item-body>
        <qti-choice-interaction
            response-identifier="RESPONSE"
            shuffle="true"
            max-choices="1"
            class="qti-choices-stacking-2"
        >
            <qti-prompt>
                <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                    <img class="soundButton" src="./speaker.svg" style="width: 30px; height: 30px;"/>
                    <div style="margin-left:0.5rem;  font-size: 2rem">동그라미(원)를 고르세요.</div>
                </div>
            </qti-prompt>
            <qti-simple-choice identifier="ChoiceA">
                <div style="width: 200px; height: 100px; display: flex; align-items: center; justify-content: center">
                    <img src="./001.svg" width="80" height="80" />
                </div>

                <!-- <div style="position: relative; width: 200px; height: 100px">
                    <img src="./001.svg" style="position: absolute; width: 20px; height: 20px; left: 0; top: 0" />
                </div> -->
            </qti-simple-choice>
            <qti-simple-choice identifier="ChoiceB">
                <div style="width: 200px; height: 100px; display: flex; align-items: center; justify-content: center">
                    <img src="./002.svg" width="80" height="80" />
                </div>
            </qti-simple-choice>
            <qti-simple-choice identifier="ChoiceC">
                <div style="width: 200px; height: 100px; display: flex; align-items: center; justify-content: center">
                    <img src="./003.svg" width="80" height="80" />
                </div>
            </qti-simple-choice>
            <qti-simple-choice identifier="ChoiceD">
                <div style="width: 200px; height: 100px; display: flex; align-items: center; justify-content: center">
                    <img src="./004.svg" width="80" height="80" />
                </div>
            </qti-simple-choice>
        </qti-choice-interaction>
    </qti-item-body>
</qti-assessment-item>
