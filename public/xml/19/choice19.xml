<?xml version="1.0" encoding="UTF-8"?>
<!-- <?xml-stylesheet type="text/xsl" href="choice.xsl"?> -->
<qti-assessment-item identifier="choice" title="Unattended Luggage" adaptive="false" time-dependent="false">
    <qti-response-declaration identifier="RESPONSE" cardinality="single" base-type="identifier">
		<qti-correct-response>
			<qti-value>ChoiceA</qti-value>
		</qti-correct-response>
	</qti-response-declaration>
	<qti-outcome-declaration identifier="SCORE" cardinality="single" base-type="float">
		<qti-default-value>
			<qti-value>0</qti-value>
		</qti-default-value>
	</qti-outcome-declaration>
    <qti-item-body>
        <qti-choice-interaction
            response-identifier="RESPONSE" shuffle="true"
            max-choices="1"
            class="qti-choices-stacking-2"
        >
            <qti-prompt>
                <audio id="tts" src="./19.MP3"></audio>
                <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                    <img class="soundButton" data-audio-id="tts" src="./speaker.svg" style="width: 30px; height: 30px;"/>
                    <div style="margin-left:0.5rem;  font-size: 2rem">4보다 1 큰 수를 나타내는 숫자를 고르세요.</div>
                </div>
            </qti-prompt>
                <qti-simple-choice identifier="ChoiceA">
                    <div style="width: 200px; height: 100px; display: flex; align-items: center; justify-content: center; font-size: 5rem; color:green">5</div>
                </qti-simple-choice>
                <qti-simple-choice identifier="ChoiceB">
                    <div style="width: 200px; height: 100px; display: flex; align-items: center; justify-content: center; font-size: 5rem; color:green">3</div>
                </qti-simple-choice>
                <qti-simple-choice identifier="ChoiceC">
                    <div style="width: 200px; height: 100px; display: flex; align-items: center; justify-content: center; font-size: 5rem; color:green">2</div>
                </qti-simple-choice>
                <qti-simple-choice identifier="ChoiceD">
                    <div style="width: 200px; height: 100px; display: flex; align-items: center; justify-content: center; font-size: 5rem; color:green">4</div>
                </qti-simple-choice>
        </qti-choice-interaction>
    </qti-item-body>
</qti-assessment-item>


