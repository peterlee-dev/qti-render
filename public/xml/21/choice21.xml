<?xml version="1.0" encoding="UTF-8"?>
<!-- <?xml-stylesheet type="text/xsl" href="choice.xsl"?> -->
<qti-assessment-item identifier="choice" title="Unattended Luggage" adaptive="false" time-dependent="false">
    <qti-response-declaration identifier="RESPONSE" cardinality="single" base-type="identifier">
        <qti-correct-response>
            <qti-value>ChoiceD</qti-value>
        </qti-correct-response>
    </qti-response-declaration>
    <qti-outcome-declaration identifier="SCORE" cardinality="single" base-type="float">
        <qti-default-value>
            <qti-value>0</qti-value>
        </qti-default-value>
    </qti-outcome-declaration>
    <qti-stylesheet href="./21.css" />
    <qti-item-body>
        <qti-choice-interaction
            response-identifier="RESPONSE"
            shuffle="true"
            max-choices="1"
            class="qti-choices-stacking-2"
        >
            <qti-prompt>
                <div style="display: flex; align-items: center; margin-bottom: 1rem">
                    <audio id="tts" src="./21.mp3"></audio>
                    <img
                        class="soundButton"
                        data-audio-id="tts"
                        src="./speaker.svg"
                        style="width: 30px; height: 30px"
                    />
                    <div style="margin-left: 0.5rem; font-size: 2rem">빈칸에 들어갈 숫자가 4인 것을 고르세요.</div>
                </div>
            </qti-prompt>
            <qti-simple-choice identifier="ChoiceA"> 
                <div class="jei-container">
                    <div>2</div>
                    <div></div>
                    <div>4</div>
                </div>
            </qti-simple-choice>
            <qti-simple-choice identifier="ChoiceB">
                <div class="jei-container">
                    <div>1</div>
                    <div></div>
                    <div>3</div>
                </div> 
            </qti-simple-choice>
            <qti-simple-choice identifier="ChoiceC">
                <div class="jei-container">
                    <div>4</div>
                    <div></div>
                    <div>6</div>
                </div>      
            </qti-simple-choice>
            <qti-simple-choice identifier="ChoiceD">
                <div class="jei-container">
                    <div>3</div>
                    <div></div>
                    <div>5</div>
                </div>   
            </qti-simple-choice>
        </qti-choice-interaction>
    </qti-item-body>
</qti-assessment-item>
